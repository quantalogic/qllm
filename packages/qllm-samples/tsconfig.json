{
    "compilerOptions": {
        "types": ["node"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "module": "commonjs",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "rootDir": "src",
        "rootDirs": ["types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
